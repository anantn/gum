+  onRemoveStream: function(stream, type) {
+    if (this._dompc.onremovestream) {
+      this._dompc.onremovestream.onCallback({
+        stream: stream, type: type,
+        __exposedProps__: { stream: "r", type: "r" }
+      });
+    }
+    this._dompc._executeNext();
+  },
