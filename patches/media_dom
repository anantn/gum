 //*****************************************************************************
+//    Navigator::nsIDOMGetUserMedia
+//*****************************************************************************
+NS_IMETHODIMP
+Navigator::MozGetUserMedia(nsIMediaStreamOptions *aParams,
+  nsIDOMGetUserMediaSuccessCallback* onSuccess,
+  nsIDOMGetUserMediaErrorCallback* onError)
+{
+  if (!Preferences::GetBool("media.gUM.enabled", true)) {
+    return NS_OK;
+  }
+
+  if (!mMediaManager) {
+    mMediaManager = new nsMediaManager();
+  }
+  
+  return mMediaManager->GetUserMedia(aParams, onSuccess, onError);
+}
